<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:text="Your BMR is: "
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
    />

    <TextView
        android:id="@+id/tv_BMR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" "
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorAccent"
        />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="50dp"
        android:stretchColumns="0,1"
        android:background="@color/black">

        <!-- Column names-->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/black">

            <TextView
                android:text="Activity Level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/colorAccent"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="2dp"
                android:layout_marginTop="3dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calories"
                android:textColor="@color/white"
                android:background="@color/colorAccent"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"/>
        </TableRow>

        <!-- Row 1-->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/black">

            <TextView
                android:id="@+id/tv_row1"
                android:text="Sedentary: little or no exercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:background="#e6e6e6"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="1dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_BMR_row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="1dp"
                android:background="#e6e6e6"
                android:text=" "
                android:textColor="@color/black"/>
        </TableRow>

        <!-- Row 2-->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/black"
>

            <TextView
                android:id="@+id/tv_row2"
                android:text="Exercise 1-3 times a week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="#e6e6e6"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tv_BMR_row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="2dp"
                android:background="#e6e6e6"
                android:textColor="@color/black"
                android:text=" "/>
        </TableRow>

        <!-- Row 3-->
        <TableRow
            android:id="@+id/tv_row3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/black">

            <TextView
                android:text="Exercise 4-5 times a week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="#e6e6e6"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tv_BMR_row3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="2dp"
                android:background="#e6e6e6"
                android:textColor="@color/black"
                android:text=" "/>
        </TableRow>

        <!-- Row 4-->
        <TableRow
            android:id="@+id/tv_row4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/black">

            <TextView
                android:text="Daily exercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="#e6e6e6"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tv_BMR_row4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="2dp"
                android:background="#e6e6e6"
                android:textColor="@color/black"
                android:text=" "/>
        </TableRow>

        <!-- Row 5-->
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/black">

            <TextView
                android:id="@+id/tv_row5"
                android:text="Intense exercise daily"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="#e6e6e6"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tv_BMR_row5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="2dp"
                android:background="#e6e6e6"
                android:textColor="@color/black"
                android:text=" "/>
        </TableRow>

        <!-- Row 6-->
        <TableRow
            android:id="@+id/tv_row6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/black">

            <TextView
                android:text="Very intense daily exercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:background="#e6e6e6"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="3dp"/>

            <TextView
                android:id="@+id/tv_BMR_row6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:background="#e6e6e6"
                android:textColor="@color/black"
                android:text=" "/>
        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="Exercise: 15-30min of elevated hearth rate activity"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="Intense exercise: 45-120min of elevated hearth rate activity"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:text="Very intense exercise: 2+ hours of elevated hearth rate activity"/>

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="16dp"
        android:backgroundTint="@color/colorAccent"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>